<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.com.carlosrestrepo.financiame.fragment.InfoMovimientoFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top"
        android:padding="@dimen/activity_vertical_margin">

        <!-- TIPO -->
        <Spinner
            android:id="@+id/tipoMovimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- FECHA -->
            <EditText
                android:id="@+id/fechaMovimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:hint="@string/dateFormat"
                android:textSize="18sp"
                android:enabled="false"/>

            <ImageButton android:id="@+id/btnFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_action_event"
                android:layout_gravity="center_vertical|center_horizontal"/>

        </LinearLayout>

        <!-- VALOR -->
        <EditText
            android:id="@+id/valorMovimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:hint="@string/valorTitle"
            android:textSize="18sp"/>

        <!-- DESCRIPCIÃ“N -->
        <EditText
            android:id="@+id/descripcionMovimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="5"
            android:hint="@string/descripcionTitle"
            android:textSize="18sp"/>

        <!-- MEDIO DE PAGO -->
        <Spinner
            android:id="@+id/medioPagoMovimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:textSize="18sp"/>

        <!-- DEUDOR -->
        <Spinner
            android:id="@+id/deudorMovimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:textSize="18sp"/>

    </LinearLayout>
</FrameLayout><!-- From: file:/D:/PROYECTOS/PROPIOS/FinanciaMe/app/src/main/res/layout/fragment_info_movimiento.xml -->