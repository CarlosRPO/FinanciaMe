<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.com.carlosrestrepo.financiame.fragment.InfoMedioPagoFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top"
        android:padding="@dimen/activity_vertical_margin">

        <!-- NOMBRE -->
        <EditText
            android:id="@+id/nombreMedioPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/nombreTitle"
            android:textSize="18sp" />

        <!-- INTERÃ‰S -->
        <EditText
            android:id="@+id/interesMedioPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="@string/interesTitle"
            android:textSize="18sp" />

    </LinearLayout>
</FrameLayout><!-- From: file:/D:/PROYECTOS/PROPIOS/FinanciaMe/app/src/main/res/layout/fragment_info_medio_pago.xml -->