<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.com.carlosrestrepo.financiame.fragment.InfoTipoMovimientoFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top"
        android:padding="@dimen/activity_vertical_margin">

        <!-- NOMBRE -->
        <EditText
            android:id="@+id/nombreTipoMovimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/nombreTitle"
            android:textSize="18sp" />

        <!-- REQUIERE DEUDOR -->
        <CheckBox
            android:id="@+id/requiereDeudor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/requiereDeudorTitle"
            android:textSize="18sp" />

    </LinearLayout>
</FrameLayout>