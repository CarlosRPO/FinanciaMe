<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.com.carlosrestrepo.financiame.fragment.TipoMovimientoFragment">

    <ListView
        android:id="@+id/listTipoMovimiento"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top"
        android:choiceMode="singleChoice" />

    <TextView android:id="@+id/lblEmptyList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:textSize="16sp"
        android:text="@string/tipoMovimientoEmpty"
        android:layout_margin="@dimen/activity_horizontal_margin" />

    <co.com.carlosrestrepo.financiame.fragment.widget.FloatingActionButton
        android:id="@+id/action_new"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:layout_marginTop="16dp"
        android:elevation="@dimen/fab_elevation"
        android:background="@drawable/fab_background"
        android:stateListAnimator="@animator/fab_anim"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <ImageView
            android:layout_width="@dimen/fab_icon_size"
            android:layout_height="@dimen/fab_icon_size"
            android:src="@drawable/fab_icons"
            android:layout_gravity="center"
            android:duplicateParentState="true"/>

    </co.com.carlosrestrepo.financiame.fragment.widget.FloatingActionButton>

</FrameLayout>